#!/usr/bin/env perl

use strict;
use warnings;

my $datetime = join(' ', @ARGV);

if (!$datetime) {
    die "Usage:\n" .
        "  gitrew 2 weeks ago\n" .
        "  gitrew 2023-06-15 14:30\n";
}

system("git log -n1 --before=\"$datetime\" --format=\"%C(yellow)%h%Creset %C(green)%cd%Creset %C(blue)%s%Creset\" --date=short");

print "\n";
